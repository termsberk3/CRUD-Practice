@model List<Category>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6" style="text-align:right"><a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Category</a></div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th style="text-align:right">Id</th>
        <th style="padding-left:10px">Category</th>
        <th style="text-align:right">Display Order</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
            <td style="text-align:right">@obj.Id</td>
            <td style="padding-left:10px">@obj.Name</td>
            <td style ="text-align:right">@obj.DisplayOrder</td>
        </tr>
        }
    </tbody>
</table>
</div>

